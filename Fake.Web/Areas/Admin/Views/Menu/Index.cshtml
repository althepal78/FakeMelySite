@model List<Product>
@* Index for Admin Create Menus*@

<h1>Start Creating a Menu for your</h1>
@if (@Model != null)
{
    <table>
        <thead>
            <tr>
                <th>Chef</th>
                <th>Dish Name</th>
                <th>Image </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        <a asp-controller="Menu"
                   asp-action="Upsert"
                   asp-route-id="@item.Id">
                            @item.Title
                        </a>
                    </td>

                    <td>@item.Description</td>
                    <td>
                        <img src="@item.ImgURL" alt="@item.Description" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
