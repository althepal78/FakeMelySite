        <img src="/images/melysSmallLogo.jpg" alt="brand logo" />
    </div>

    <a asp-area="Customer"
       asp-controller="Home"
       asp-action="Index" class="nav-link"> Home  </a>

    <a asp-area="Customer"
       asp-controller="Menu"
       asp-action="Index" class="nav-link"> Daily Menu  </a>

