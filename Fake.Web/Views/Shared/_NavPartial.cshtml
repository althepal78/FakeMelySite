        <div class="nav-dropdown nav-information-grid" data-nav-dropdown>
            <button class="nav-link" data-nav-dropdown-button id="drop-btn" href="#">Content Management ></button>

            <div class="nav-dropdown-menu">
                <div class="nav-dropdown-links">
                    <a asp-area="Admin"
                   asp-controller="Category"
                   asp-action="Index">
                        Category >
